{
  "compilerOptions": {
    "target": "es5",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}